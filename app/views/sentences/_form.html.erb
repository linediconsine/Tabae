<%= javascript_pack_tag 'voice' %>
<%= form_with(model: sentence, local: true) do |form| %>
  <% if sentence.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sentence.errors.count, "error") %> prohibited this sentence from being saved:</h2>

      <ul>
        <% sentence.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :name %>
    <%= form.hidden_field :color %>
    <%= form.hidden_field :group %>
  </div>

  <div class="field">
    <%= form.text_area :sentence, :required => true,:class => 'w-100 bg-light', style: 'min-height:14em' %>
  </div>



  <div class="actions">


    <%= form.submit t('save') , :class => 'only_online btn btn-space btn-secondary'%>
    <!-- <a class='only_offline btn btn-space btn-secondary'> Salva offline </a> -->

    <a onclick="voice(document.getElementById('sentence_sentence').value)" class="btn btn-space btn-primary"><%= t "talk"%></a>
    <% if action_name == 'edit' %>
      <%= link_to t("delete"), sentence, method: :delete, data: { confirm: 'Conferma per cencellare' } , class: "btn btn-space btn-secondary" %>
    <% end %>
  </div>
<% end %>
